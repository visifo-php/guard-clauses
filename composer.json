{
    "name": "visifo-php/guard-clauses",
    "description": "Guard Clauses is a fluent guard clauses library.",
    "keywords": [
        "visifo",
        "guard-clauses"
    ],
    "homepage": "https://github.com/visifo-php/guard-clauses",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergej Tihonov",
            "email": "sergej@visifo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Visifo\\GuardClauses\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Visifo\\GuardClauses\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
